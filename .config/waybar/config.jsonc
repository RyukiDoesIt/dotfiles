    "hyprland/workspaces": {
      "disable-scroll": true,
      "rotate": 0,
      "all-outputs": true,
      "active-only": false,
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace -1",
      "on-scroll-down": "hyprctl dispatch workspace +1",
      "persistent-workspaces": {
      }
    },
    "hyprland/window": {
      "format": "  {}",
      "rotate": 0,
      "separate-outputs": true,
      "rewrite": {
          "(.*)ryuki@pegasus:(.*)": "$1  :$2",
          "(.*) — Mozilla Firefox": "$1 󰈹",
          "(.*)Mozilla Firefox": "$1 Firefox 󰈹",
          "(.*) - Visual Studio Code": "$1 󰨞",
          "(.*)Visual Studio Code": "$1 Code 󰨞",
          "(.*) — Thunar": "$1 󰉋",
          "(.*)Spotify.*": "$1 Spotify 󰓇",
          "(.*)Steam": "$1 Steam 󰓓",
          "(.*) - Discord": "$1  ",
          "(.*?)-\\s*YouTube(.*)": "$1󰗃", 
          "(.*?)-\\s*Github(.*)": "$1", 
          "(.*?\\s)YouTube(.*)": "$1YouTube 󰗃",
          "(.*?\\s)Github(.*)": "$1Github "
      },
      "max-length": 200
    },
    "network": {
      "format": " 󰖩",
      "format-ethernet": " 󰈀",
      // "tooltip": "{ifname}",
      "tooltip-format": "{essid}",
      "interval": 2
    },
    // "temperature": {
