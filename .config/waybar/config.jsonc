    "pulseaudio": {
      "format": " {volume}%",
      "scroll-step": 1,
      "on-click": "pavucontrol"
    },
    "battery": {
      "format": "{capacity}% {icon}",
      "format-icons": [
        "",
        "",
        "",
        "",
        ""
      ]
    },
    "custom/powermenu": {
      "format": "  ",
      "tooltip": false,
      "on-click": "exec wlogout -p layer-shell"
    },
    "custom/padd": {
      "format": "  ",
      "interval": "once",
      "tooltip": "false"
    }
